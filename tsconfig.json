{
  "compilerOptions": {
    "noImplicitAny": true,
    "alwaysStrict": true,
    "strict": true,
    "lib": ["ES6", "DOM"],
    "target": "ES6",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["./src/**/*.ts"]
}
