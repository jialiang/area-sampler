{
  "compilerOptions": {
    "noImplicitAny": true,
    "alwaysStrict": true,
    "strict": true,
    "lib": ["ES6", "DOM"],
    "target": "ES6",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "include": ["./src/**/*"]
}
